@model Pessoa

@{ 
    var pessoa = Model;
}

<form action="/pessoas/edicao" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" name="id" value="@pessoa.Id" />
    </div>
    <div class="form-group">
        <label>Nome e Sobrenome</label>
        <input type="text" class="form-control" name="nome" value="@pessoa.nome" />
    </div>
    <div class="form-group">
        <label>Data de Aniversário</label>
        <input type="date" name="DataDeAniversario" value="@pessoa.DataDeAniversario.ToShortDateString()" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a href="/pessoas/lista" class="btn btn-primary">Voltar</a>
</form>